<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.portfolio.ReadPick.dao.UserMapper">

    <!-- insert -->

    <!-- 회원가입 -->
    <insert id="userInsert" parameterType="user"> insert into users value(null, #{userName},
        #{nickName}, #{id}, #{pw}, #{email}, #{adminAt}, #{firstAt}); </insert>

    <insert id="insertUserPick" parameterType="int">
        insert into userPick values(#{userIdx}, #{bmIdx}, #{bsIdx}, #{bssIdx});
    </insert>
    <!-- /insert -->


    <!-- select -->

    <select id="selectList" resultType="user">select * from users order by userIdx</select>

    <select id="selectOneFromId" parameterType="String"> select * from users where id = #{id} </select>

    <!-- /select -->


    <!-- update -->
    <update id="userFirstAtUpdate" parameterType="user">
        update users set firstAt = #{firstAt} where userIdx = #{userIdx}
    </update>

    <update id="userInfoModify" parameterType="user">
        update users set userName = #{userName}, nickName = #{nickName}, id = #{id}, pw = #{pw}, email = #{email} where userIdx = #{userIdx}
    </update>
    <!-- /update -->


    <!-- delete -->


    <!-- /delete -->


</mapper>